<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="spinnerStyle">@style/Widget.App.Spinner</item>
        <item name="android:spinnerStyle">@style/Widget.App.Spinner</item>

        <item name="windowActionBar">false</item>

    </style>

    <style name="Widget.App.Spinner" parent="@style/Widget.AppCompat.Spinner">
        <item name="overlapAnchor">true</item>
        <item name="android:background">@drawable/spinner_background</item>
        <item name="android:fontFamily">@font/elmessiri_regular</item>
    </style>

    <style name="text_in_layout_hint_Style" parent="TextAppearance.Design.Hint">
        <item name="android:textSize">@dimen/dimen_16sp</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="text_in_layout_error_hint_Style">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">@dimen/dimen_16sp</item>
    </style>

    <style name="CheckboxStyle" parent="AppTheme">
        <item name="android:textColorSecondary">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="ProgressBarTheme" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="exitdialog_animation1">
        <item name="android:windowEnterAnimation">@anim/exitdialog_anim1</item>
        <item name="android:windowExitAnimation">@anim/exitdialog_anim2</item>
    </style>

    <style name="roundedDialog">
        <item name="android:background">@drawable/btn_background_green</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
    </style>

    <style name="roundedDialog_print">
        <item name="android:background">@drawable/btn_background_gray</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
    </style>
    <style name="roundedDialog_red">
        <item name="android:background">@drawable/rounded_corner_button_red</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
    </style>
    <style name="roundedDialog_yellow">
        <item name="android:background">@drawable/btn_background_yellow</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
    </style>
    <style name="roundedDialogInfo">
        <item name="android:background">@drawable/btn_background1</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
    </style>


    <style name="circleBackgroundInfo">
        <item name="android:background">@drawable/dialog_circle</item>
    </style>
    <style name="circleBackground">
        <item name="android:background">@drawable/dialog_circle_green</item>
    </style>
    <style name="circleBackground_red">
        <item name="android:background">@drawable/dialog_circle_red</item>
    </style>
    <style name="circleBackground_yellow">
        <item name="android:background">@drawable/dialog_circle_yellow</item>
    </style>
    <style name="TextLabel" parent="TextAppearance.Design.Hint">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="MyCustomTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
    </style>
    
</resources>
